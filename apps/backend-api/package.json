{
  "name": "@app-passeios-turisticos/backend-api",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/backend-api/dist",
          "format": [
            "cjs"
          ],
          "bundle": false,
          "main": "apps/backend-api/src/main.ts",
          "tsConfig": "apps/backend-api/tsconfig.app.json",
          "assets": [
            "apps/backend-api/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@app-passeios-turisticos/backend-api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@app-passeios-turisticos/backend-api:build:development"
          },
          "production": {
            "buildTarget": "@app-passeios-turisticos/backend-api:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": false
        }
      }
    }
  },
  "dependencies": {
    "@logtail/node": "^0.5.5",
    "@prisma/client": "^6.12.0",
    "cookie-parser": "^1.4.7",
    "date-fns-tz": "^3.2.0",
    "ejs": "^3.1.10",
    "express-fileupload": "^1.5.2",
    "ioredis": "^5.6.1",
    "nodemailer": "^7.0.5",
    "prisma": "^6.12.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express-fileupload": "^1.5.1",
    "@types/nodemailer": "^6.4.17",
    "typescript": "~5.8.2"
  },
  "scripts": {
    "build": "tsc -p tsconfig.app.json",
    "start": "node out-tsc/backend-api/src/main.js"
  }
}