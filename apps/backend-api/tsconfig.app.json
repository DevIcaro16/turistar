{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "out-tsc/backend-api",
    "rootDir": ".",
    "types": [
      "node",
      "express"
    ],
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "tsBuildInfoFile": "out-tsc/backend-api/tsconfig.app.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "src/*.json",
    "../../packages/**/*.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}